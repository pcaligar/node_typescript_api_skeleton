{
  "name": "node_typescript_api_skeleton",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "build": "rimraf dist && tsc",
    "nodemon": "nodemon",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "start:dev": "ts-node -r tsconfig-paths/register src/app/server.ts",
    "start:prod": "node -r ts-node/register/transpile-only -r tsconfig-paths/register dist/src/app/server.js",
    "test": "jest --passWithNoTests --silent --noStackTrace --runInBand",
    "test:ci": "npm test -- --coverage",
    "test:clear": "jest --clearCache",
    "test:integration": "npm test -- -c jest-integration-config.ts",
    "test:integration-w": "npm test -- --watch -c jest-integration-config.ts",
    "test:staged": "npm test -- --findRelatedTests",
    "test:unit": "npm test -- -c jest-unit-config.ts",
    "test:unit-w": "npm test -- --watch -c jest-unit-config.ts",
    "test:verbose": "jest --passWithNoTests --runInBand"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pcaligar/node_typescript_api_skeleton.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/pcaligar/node_typescript_api_skeleton/issues"
  },
  "homepage": "https://github.com/pcaligar/node_typescript_api_skeleton#readme",
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.4",
    "@types/node": "^20.5.9",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^9.0.3",
    "@types/uuid-validate": "^0.0.1",
    "@typescript-eslint/eslint-plugin": "^6.6.0",
    "@typescript-eslint/parser": "^6.6.0",
    "eslint": "^8.48.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-import-resolver-typescript": "^3.6.0",
    "eslint-plugin-folders": "^1.0.4",
    "eslint-plugin-hexagonal-architecture": "^1.0.3",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-jest": "^27.2.3",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-unused-imports": "^3.0.0",
    "husky": "^8.0.3",
    "jest": "^29.6.4",
    "lint-staged": "^14.0.1",
    "nodemon": "^3.0.1",
    "rimraf": "^5.0.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.2.2",
    "uuid": "^9.0.0",
    "uuid-validate": "^0.0.3"
  },
  "dependencies": {
    "dayjs": "^1.11.9",
    "express": "^4.18.2",
    "express-validator": "^7.0.1"
  }
}
